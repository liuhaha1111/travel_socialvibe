{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "socialvibe-backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "socialvibe-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1"
    }
  ],
  "outputDirectory": "dist",
  "env": {
    "NODE_ENV": "production"
  }
}