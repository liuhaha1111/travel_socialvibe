{
  "version": 2,
  "builds": [
    {
      "src": "socialvibe/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "socialvibe/dist"
      }
    },
    {
      "src": "socialvibe-backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "socialvibe-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "socialvibe/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}